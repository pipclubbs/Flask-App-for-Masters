{% extends 'base.jinja2' %}

{% block content %}

    <h2 class="search-result-header">Climbing classes</h2>
    <div class="grid-container-results">
      <div class="grid-item search-box">
        <div>
          {% if class_search %}{% for item in class_search %} {% if "http" in
          item %}
          <form style="display: inline" action="{{ item }}" method="get" target="blank">
            <button class="submit-button">Visit the website</button>
          </form>
          {% elif "\n\n" in item %}
          <h3 class="search-result-title">
            <br />{{ item }}
          </h3>
          {% elif "\n" in item %}
          <h4>{{ item }}</h4>
          {% else %}
          <p class="search-results">{{ item }}</p>
          {% endif %} {% endfor %} {% else %}
          <p class="search-results">No classes in your area</p>
          {% endif %}
        </div>
      </div>
    </div>

{% endblock %}